{
  "extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"strict": true,
    "baseUrl": ".",
		"allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
		"moduleResolution": "node",
		"noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "paths": {
      "app/*": ["src/app/*"],
      "pages/*": ["src/pages/*"],
      "widgets/*": ["src/widgets/*"],
      "features/*": ["src/features/*"],
      "entities/*": ["src/entities/*"],
      "shared/*": ["src/shared/*"],
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation"
          ]
        }
      }
    ]
  },
	"exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}