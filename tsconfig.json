{
  "extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"strict": true,
    "baseUrl": ".",
    "paths": {
			"*": ["src/*"],
      // "app/*": ["src/app/*"],
      // "processes/*": ["src/processes/*"],
      // "pages/*": ["src/pages/*"],
      // "widgets/*": ["src/widgets/*"],
      // "features/*": ["src/features/*"],
      // "entities/*": ["src/entities/*"],
      // "shared/*": ["src/shared/*"],
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation"
          ]
        }
      }
    ]
  }
}